{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowJs": false,
    "incremental": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@vetclinic/shared-kernel": ["../../shared-kernel/dist"],
      "@vetclinic/shared-kernel/*": ["../../shared-kernel/dist/*"]
    }
  },
  "include": [
    "src/**/*",
    "../../shared-kernel/dist/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}